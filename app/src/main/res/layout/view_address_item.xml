<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginStart="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        card_view:cardUseCompatPadding="true">


        <LinearLayout
            android:id="@+id/lout_frame_select"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ic_check_indicator"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:layout_gravity="center_horizontal"
                app:srcCompat="@drawable/ic_tick_unselected"
                />

            <com.ibtikartechs.apps.am.ui_utilities.CustomFontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:text="معلومات المستلم"
                android:textColor="@color/white_blue"
                android:textSize="16sp"
                app:custom_font="@string/font_name_helvatican" />

            <com.ibtikartechs.apps.am.ui_utilities.CustomFontTextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="-8dp"
                android:textColor="@color/black"
                app:custom_font="@string/font_name_helvatican"
                tools:text="أحمد يحيى عامر" />

            <com.ibtikartechs.apps.am.ui_utilities.CustomFontTextView
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="-8dp"
                android:textColor="@color/black"
                app:custom_font="@string/font_name_helvatican"
                tools:text="15 عبدالرازق السنهوري متفرع من عباس العقاد" />

            <com.ibtikartechs.apps.am.ui_utilities.CustomFontTextView
                android:id="@+id/tv_govern_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="-8dp"
                android:textColor="@color/black"
                app:custom_font="@string/font_name_helvatican"
                tools:text="عنوان الخريطة" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:orientation="horizontal">

                <com.ibtikartechs.apps.am.ui_utilities.CustomFontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-8dp"
                    android:text="الشحن : "
                    android:textColor="@color/black"
                    app:custom_font="@string/font_name_helvatican" />

                <com.ibtikartechs.apps.am.ui_utilities.CustomFontTextView
                    android:id="@+id/tv_availability"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="-8dp"
                    app:custom_font="@string/font_name_helvatican"

                    />

            </LinearLayout>

            <ImageView
                android:id="@+id/map_image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/staticmap" />
        </LinearLayout>


    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>