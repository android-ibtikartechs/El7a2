<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/lout_main"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/lout"
        app:cardCornerRadius="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
            android:id="@+id/layout_root"
        android:orientation="horizontal"
            android:layout_marginEnd="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginStart="16dp"

            android:gravity="center_vertical"
        >

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                app:srcCompat="@drawable/ic_magnify"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                />

        <com.ibtikartechs.apps.el7a2.ui_utilities.CustomAutoCompleteTextView
            android:id="@+id/customAutoCompleteTextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:completionThreshold="1"
            android:popupBackground="@color/white"
            android:dropDownAnchor="@id/lout"
            android:hint="عن ماذا تبحث؟"
            android:gravity="center_vertical"
            android:paddingBottom="3dp"
            android:layout_gravity="center_vertical"
            android:textCursorDrawable="@null"
            android:textSize="14sp"
            android:dropDownWidth="match_parent"
            app:custom_font_auto_compl_tex_view="@string/font_name_helvatican"
            android:imeOptions="actionSearch"
            android:maxLines="1"
            android:inputType="text"

            />
        </LinearLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>